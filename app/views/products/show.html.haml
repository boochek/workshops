.page-header
  %h4= "Product:"
  %h2= product.title
%p
  %strong= "Description:"
  %br
  = product.description
%p
  %strong= "Price"
  %br
  = number_to_currency(product.price)
%p
  %strong= "Category"
  %br
  = product.category.name
%p
  %strong= "Average rating"
  %br
  = number_with_precision(product.average_rating, precision: 2)
  %br
  %br
%p
  %h4 Reviews:
  = render 'reviews/form'

= render reviews

.form-actions
  = link_to "Back", products_path, class: 'btn'
  = link_to "Edit", edit_category_product_path(product.category, product), class: 'btn btn-info'
  = link_to "Delete", category_product_path(product.category, product), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default:'Are you sure?')) }, class: 'btn btn-warning'
